@using eMoviesFramework.Models
@model SummaryModel

<body>
    <h1>Order confirmation</h1>

    <br />

    <div id="OCMainDiv">

        <p style="float:left; font-size:17px; padding-left: 10px"><b>Your details</b></p>
        <br />
        <br />
        <br />
        <table>
            <tr>
                <td class="OCcol1">Name</td>
                <td class="OCcol2">@Model.Customer.Name</td>
            </tr>
            <tr>
                <td class="OCcol1">Email</td>
                <td class="OCcol2">@Model.Customer.Email</td>
            </tr>
            <tr>
                <td class="OCcol1">Credit card number</td>
                <td class="OCcol2">@Model.Customer.CardNumberObfuscated</td>
            </tr>
            <tr>
                <td class="OCcol1">Credit card type</td>
                <td class="OCcol2">@Model.Customer.CardType</td>
            </tr>
            <tr>
                <td class="OCcol1">Please email me future promotions</td>
                <td class="OCcol2" id="EmailPref">@Model.Customer.EmailPreferenceYN</td>
            </tr>
        </table>

        <p style="float:left; font-size:17px; padding-left: 10px"><b>Your tickets</b></p>

        <br />

        <table id="yourtickets">
            @foreach (var movie in Model.Tickets.Movies.Where(a => a.Quantity > 0))
            {
                <tr class="YourTicketsTR">
                    <td class="YourTicketsCol1" id="Movie1">@movie.Name</td>
                    <td class="YourTicketsCol2" id="Movie1Quantity">@movie.Quantity x £@movie.Price</td>
                </tr>
            }
            <tr></tr>
            <tr></tr>
            <tr></tr>
            <tr></tr>
            <tr>
                    <td class="totalword"><b>Total</b></td>
                <td class="YourTicketsCol2"><b>@Model.Tickets.CurrencyTotal</b></td>
            </tr>
        </table>
    </div>
    <br />
</body>


